%{?scl:%scl_package nodejs-%{npm_name}}
%{!?scl:%global pkg_name %{name}}

%global npm_name @webcomponents/webcomponentsjs

Name: %{?scl_prefix}nodejs-webcomponents-webcomponentsjs
Version: 2.8.0
Release: 1%{?dist}
Summary: Web Components Polyfills
License: BSD-3-Clause
Group: Development/Libraries
URL: https://github.com/webcomponents/polyfills/tree/master/packages/webcomponentsjs
Source0: https://registry.npmjs.org/@webcomponents/webcomponentsjs/-/webcomponentsjs-%{version}.tgz
%if 0%{?!scl:1}
BuildRequires: nodejs-packaging
%endif
BuildArch: noarch
ExclusiveArch: %{nodejs_arches} noarch
Provides: %{?scl_prefix}npm(%{npm_name}) = %{version}

%description
%{summary}

%prep
%setup -q -n package

%install
mkdir -p %{buildroot}%{nodejs_sitelib}/%{npm_name}
cp -pfr bundles %{buildroot}%{nodejs_sitelib}/%{npm_name}
cp -pfr custom-elements-es5-adapter.js %{buildroot}%{nodejs_sitelib}/%{npm_name}
cp -pfr package.json %{buildroot}%{nodejs_sitelib}/%{npm_name}
cp -pfr src %{buildroot}%{nodejs_sitelib}/%{npm_name}
cp -pfr webcomponents-bundle.d.ts %{buildroot}%{nodejs_sitelib}/%{npm_name}
cp -pfr webcomponents-bundle.js %{buildroot}%{nodejs_sitelib}/%{npm_name}
cp -pfr webcomponents-bundle.js.map %{buildroot}%{nodejs_sitelib}/%{npm_name}
cp -pfr webcomponents-loader.js %{buildroot}%{nodejs_sitelib}/%{npm_name}


%files
%{nodejs_sitelib}/%{npm_name}
